{% extends "CoreBundle::layout.html.twig" %}

{% block body %}

	<section class="container ligue">

		<h1> <span class="glyphicon glyphicon-fire text-primary" aria-hidden="true"></span> Création d'une ligue</h1>

		<div class="row well">

			{{ form_start(form) }} 
				<div class="col-md-7">
					<div class="form-group">
						{{ form_label(form.name, 'Nom de votre ligue' ) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
					</div>

					         
                    <div class="form-group checkbox checkbox-primary">
                        {{ form_errors(form.private) }}  
                        {{ form_widget(form.private) }}
                        {{ form_label(form.private, 'private' ) }}
                    </div>

					<div class="form-group form-hidden" id="form-js-password">
					    {{ form_label(form.password, 'Password' ) }}
                        {{ form_errors(form.password) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-4 col-md-offset-1">

					<div class="form-group">
						<label for="statsPPG" class="col-sm-6 control-label">Point</label>
						<div class="col-sm-6 input-group">
							<div class="input-group-addon">x</div>
							<input type="text" class="form-control" id="league_add_stats_points" name="league_add[stats_points]" value="1">
						</div>
					</div>

					<div class="form-group">
						<label for="statsPPG" class="col-sm-6 control-label">Rebond</label>
						<div class="col-sm-6 input-group">
							<div class="input-group-addon">x</div>
							<input type="text" class="form-control" id="league_add_stats_rebonds" name="league_add[stats_rebonds]" value="1">
						</div>
					</div>

					<div class="form-group">
						<label for="statsPPG" class="col-sm-6 control-label">Passe décisive</label>
						<div class="col-sm-6 input-group">
							<div class="input-group-addon">x</div>
							<input type="text" class="form-control" id="league_add_stats_assists" name="league_add[stats_assists]" value="1">
						</div>
					</div>

					<div class="form-group">
						<label for="statsPPG" class="col-sm-6 control-label">Double Double</label>
						<div class="col-sm-6 input-group">
							<div class="input-group-addon">+</div>
							<input type="text" class="form-control" id="league_add_stats_double" name="league_add[stats_double]" value="0">
						</div>
					</div>

					<div class="form-group">
						<label for="statsPPG" class="col-sm-6 control-label">Triple Double</label>
						<div class="col-sm-6 input-group">
							<div class="input-group-addon">+</div>
							<input type="text" class="form-control" id="league_add_stats_triple" name="league_add[stats_triple]" value="0">
						</div>
					</div>
					
				</div>

				<div class="col-xs-10 col-xs-offset-1 text-center">
					<hr/>
					<button type="submit" class="btn btn-default">Annuler</button>
					{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}	
				</div>

				{% do form.stats_points.setRendered %}
				{% do form.stats_rebonds.setRendered %} 
				{% do form.stats_assists.setRendered %} 
				{% do form.stats_double.setRendered %} 
				{% do form.stats_triple.setRendered %} 

			{{ form_end(form) }}

		</div>
	</section>

{% endblock %}

{% block javascripts %}
<script>
	(function( $ ) {

		var isPrivate = $('#league_add_private:checked').length;
		if(isPrivate == 1)
			$('#form-js-password').removeClass('form-hidden');
		
		$('#league_add_private').on('click', function(){
			if( this.checked ) {
				$('#form-js-password').removeClass('form-hidden');
			}
			else {
				$('#form-js-password').addClass('form-hidden');
				// $('#league_add_password').val('');
			}

		});

	}( jQuery));
</script>
{% endblock %}