<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8"> 
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Admin{% endblock %}</title>
    <meta name="description" content="Admin">

    {% block stylesheets %}
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/admin_bootstrap.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/admin_extra.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}" type="text/css" />
    {% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>

        <!-- HEADER -->
    <header>
        <nav class="navbar navbar-default navbar-fixed-top">
           
                <div class="navbar-header text-uppercase ">
                    <a class="navbar-brand text-center" href="#">
                        Admin panel
                    </a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="nav-borders">
                        <a href="#menu-toggle" id="menu-toggle"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span></a>
                    </li>
                    <!-- breadcrumps -->
                    <li>
                        <p class="navbar-text">Dashboard / Users </p>
                    </li>
                </ul>

                <ul class="nav navbar-nav text-uppercase pull-right">
                    <li>
                        <p class="navbar-text">12 mai 2016, 13:24</p>
                    </li>
                    <li><a href="#"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-off" aria-hidden="true"></span></a></li>
                </ul>

            
        </nav>
    </header>
    <!-- /HEADER -->

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <p class="sidebar-header">
                <span class="bigname">{{ app.user.username }}</span><br/>
                <span class="smaller">Admin</span>
            </p>
            <ul class="sidebar-nav">
                <li>
                    <a href="{{ path('admin_dashboard') }}"><i class="fa fa-home" aria-hidden="true"></i> Dashboard </a>
                </li>
                <li>
                    <a href="{{ path('admin_playoff_teams') }}"><i class="fa fa-list-ul" aria-hidden="true"></i> Teams</a>
                </li>
                <li>
                    <a href="{{ path('admin_playoff_players', {'id':'all'}) }}"><i class="fa fa-users" aria-hidden="true"></i> Players</a>
                </li>
                <li>
                    <a href="{{ path('admin_playoff_games') }}"><i class="fa fa-calendar-minus-o" aria-hidden="true"></i> Games</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-trophy" aria-hidden="true"></i> Competitions</a>
                </li>
                <li>
                    <a href="{{ path('admin_users_list') }}"><i class="fa fa-users" aria-hidden="true"></i> Users</a>
                </li>
                <li>
                    <a href="{{ path('admin_core_logs') }}"><i class="fa fa-info-circle" aria-hidden="true"></i> Logs</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            {% block body %}

            {% endblock %}
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Javascript -->
    <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/admin_extra.js') }}"></script>
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
    <!-- Menu Toggle Script -->
    <script>
  
    </script>
    {% block javascripts %}

    {% endblock %}

</body>

</html>