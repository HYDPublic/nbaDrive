{% extends "CoreBundle::admin_layout.html.twig" %}

{% block body %}

<div class="container-fluid">
                
    <header class="row title">
        <div class="col-lg-12">
            <i class="fa fa-users" aria-hidden="true"></i> Teams ! 
        </div>   
    </header>
    
    <div class="row">
        <div class="col-lg-12">

            <div class="box">
                <div class="box-header">All teams</div>
                <div class="box-body">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Conference</th>
                                <th>name</th>
                                <th>Shortname</th>
                                <th>Rank</th>
                                <th class="text-center">#NBC ID</th>
                                <th class="text-right">Players</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for team in teams %}
                                
                                <tr class="clickrow" data-url="{{ path('admin_playoff_team_edit', {'id':team.id}) }}">
                                    <td>{{ team.id }}</td>
                                    <td>{{ team.conference }}</td>
                                    <td><strong>{{ team.name }}</strong></td>
                                    <td>{{ team.shortname }}</td>
                                    <td>{{ team.rank }}</td>
                                    <td class="text-center">{{ team.aid }}</td>
                                    <td class="text-right">
                                        <a href="{{ path('admin_playoff_players', {'id':team.id}) }}" class="btn btn-primary">List</a> 
                                        <a href="{{ path('admin_playoff_players_fetch', {'id':team.id}) }}" class="btn btn-default">Fetch</a>
                                    </td>
                                </tr>
                                
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        
        </div>
    </div>

</div>

{% endblock %}
