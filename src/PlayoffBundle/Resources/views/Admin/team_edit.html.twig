{% extends "CoreBundle::admin_layout.html.twig" %}

{% block body %}

<div class="container-fluid">
                
    <header class="row title">
        <div class="col-lg-12">
            <i class="fa fa-user" aria-hidden="true"></i> Team ! 
        </div>   
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-12 box">
                <div class="box-header">Edit user #{{ form.vars.data.id }} : {{ form.vars.data.name }}</div>
                <div class="box-body row">
                
                {# debut form #}
                {{ form_start(form) }}  


                    <div class="col-lg-9">

                        <div class="box">
                            <div class="box-header">General info</div>
                            <div class="box-body">

                                <div class="form-group row">
                                    <div class="col-xs-12">
                                        {{ form_label(form.name, 'Team name' ) }}
                                        {{ form_errors(form.name) }}
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <div class="col-xs-12">
                                        {{ form_label(form.logo, 'Team logo' ) }}
                                        {{ form_errors(form.logo) }}
                                        {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-xs-6">
                                        {{ form_label(form.conference, 'Conference/Cat' ) }}
                                        {{ form_errors(form.conference) }}
                                        {{ form_widget(form.conference, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                    <div class="col-xs-6">
                                        {{ form_label(form.rank, 'Season ranking' ) }}
                                        {{ form_errors(form.rank) }}
                                        {{ form_widget(form.rank, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                     <div class="col-xs-6">
                                        {{ form_label(form.shortname, 'Team abbreviation name (3 letters)' ) }}
                                        {{ form_errors(form.shortname) }}
                                        {{ form_widget(form.shortname, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-xs-6">
                                        {{ form_label(form.aid, 'ID for fetching data (nbc/espn)' ) }}
                                        {{ form_errors(form.aid) }}
                                        {{ form_widget(form.aid, {'attr': {'class': 'form-control'}}) }}
                                    </div>                                   
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="col-lg-3">
                        <img src="{{ asset('pics/teams/' ~ logo ) }}" class="teamlogo" alt="" />                        
                    </div> 

                    <div class="col-lg-12 text-center colsubmit">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>

                {{ form_end(form) }}

                </div>
            </div>
        </div>

    </div>

</div>

{% endblock %}