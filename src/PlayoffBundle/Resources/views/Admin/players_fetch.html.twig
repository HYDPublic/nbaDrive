{% extends "CoreBundle::admin_layout.html.twig" %}

{% block body %}

<div class="container-fluid">
                
    <header class="row title">
        <div class="col-lg-12">
            <i class="fa fa-users" aria-hidden="true"></i> Players ! 
        </div>   
    </header>
    
    <div class="row">
        <div class="col-lg-12">

            <div class="box">
                <div class="box-header">Fetch players for team {{ team.name }}</div>
                <div class="box-body">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Team</th>
                                <th>Player</th>
                                <th>stats</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for player in players %}
                                
                                <tr>
                                    <td>{{ player.aid }}</td>
                                    <td>{{ team.name }}</td>
                                    <td><strong>{{ player.name }}</strong></td>
                                    <td>{{ player.stats|join(',') }}</td>
                                </tr>
                                
                            {% endfor %}
                        </tbody>
                    </table>

                     <div class="row">
                    {{ form_start(form) }} 
                        
                        <div class="col-lg-12 text-center colsubmit">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        
                    {{ form_end(form) }}
                    </div>


                </div>
            </div>

        </div>
    </div>

</div>

{% endblock %}
